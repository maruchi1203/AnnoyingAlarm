<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="200">
       <KeyFrameSet>
       </KeyFrameSet>
        <OnClick motion:targetId="@+id/alarmMenuButton" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/blindViewForPreferenceLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"/>
        <Constraint
            android:id="@+id/preferenceLinearLayout"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintEnd_toStartOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/blindViewForPreferenceLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <Constraint
            android:id="@+id/preferenceLinearLayout"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
    </ConstraintSet>
    <Transition
        motion:constraintSetStart="@+id/end"
        motion:constraintSetEnd="@+id/start" >
        <OnClick motion:targetId="@+id/blindViewForPreferenceLinearLayout"
            motion:clickAction="transitionToEnd"/>
        <OnSwipe
            motion:touchAnchorId="@+id/preferenceLinearLayout"
            motion:dragDirection="dragLeft"
            motion:touchAnchorSide="left"
            motion:onTouchUp="autoCompleteToEnd"/>
    </Transition>
</MotionScene>