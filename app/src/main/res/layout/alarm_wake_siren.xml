<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/alarmButtonGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <CheckBox
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/button_unselected"
                android:button="@color/transparent" />

            <CheckBox
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/button_unselected"
                android:button="@color/transparent" />

            <CheckBox
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/button_unselected"
                android:button="@color/transparent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <CheckBox
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/button_unselected"
                android:button="@color/transparent" />

            <CheckBox
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/button_unselected"
                android:button="@color/transparent" />

            <CheckBox
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/button_unselected"
                android:button="@color/transparent" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <CheckBox
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/button_unselected"
                android:button="@color/transparent" />

            <CheckBox
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/button_unselected"
                android:button="@color/transparent" />

            <CheckBox
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/button_unselected"
                android:button="@color/transparent" />

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/alarmDescTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="제대로 외웠나요?"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/alarmButtonGroup" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/alarmWakeSirenReleaseButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="30dp"
        android:background="@color/black"
        android:orientation="vertical"
        android:text="알람 해제"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>