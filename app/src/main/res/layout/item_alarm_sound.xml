<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?attr/selectableItemBackground" >

    <ImageView
        android:id="@+id/alarmSoundImageView"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginVertical="8dp"
        android:layout_marginStart="8dp"
        android:background="@color/grey_91"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/alarmSoundTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        tools:text="제목"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/alarmSoundArtistTextView"
        app:layout_constraintStart_toEndOf="@id/alarmSoundImageView"
        app:layout_constraintTop_toTopOf="@id/alarmSoundImageView"
        app:layout_constraintVertical_chainStyle="packed"/>

    <TextView
        android:id="@+id/alarmSoundArtistTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="아티스트"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/alarmSoundImageView"
        app:layout_constraintStart_toStartOf="@id/alarmSoundTitleTextView"
        app:layout_constraintTop_toBottomOf="@id/alarmSoundTitleTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>